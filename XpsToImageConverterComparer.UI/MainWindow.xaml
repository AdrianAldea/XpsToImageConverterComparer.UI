<Window x:Class="EMGUCV_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xps Comparer" Height="350" Width="530.087">
    <Grid>
        <Button x:Name="btnConvert" Content="Start Convert" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Margin="10,102,0,0" Click="Button_Click"/>
        <TextBox x:Name="tbXpsPath" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="D:\test" VerticalAlignment="Top" Width="327" Margin="180,13,0,0" MouseDoubleClick="MouseEnterEvent"/>
        <Label Content="Path to Xps files for compare:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Path to original xps files:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbXpsPathOriginal" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="D:\test - original" VerticalAlignment="Top" Width="327" Margin="180,44,0,0" MouseDoubleClick="MouseEnterEvent"/>
        <Button x:Name="btnCompare" Content="Start Compare" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Margin="364,102,0,0" Click="Button_Click"/>

    </Grid>
</Window>
